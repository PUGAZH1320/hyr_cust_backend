// This is your Prisma schema file
generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model Temp_phone {
  user_id   BigInt    @id @db.BigInt
  ph_no     String    @db.VarChar(20)
  otp       String    @db.VarChar(6)
  created_at DateTime @default(now()) @db.DateTime(0)
  updated_at DateTime @updatedAt @db.DateTime(0)
  deleted_at DateTime? @db.DateTime(0)

  @@map("temp_phone")
}

model User_session {
  id        BigInt   @id @default(autoincrement()) @db.BigInt
  user_id  BigInt   @db.BigInt
  fcm_token String  @db.VarChar(255)
  token     String  @db.VarChar(755)
  created_at DateTime @default(now()) @db.DateTime(0)
  updated_at DateTime @updatedAt @db.DateTime(0)
  deleted_at DateTime? @db.DateTime(0)

  @@map("user_session")
}

model Otp_data {
  id        BigInt   @id @default(autoincrement()) @db.BigInt
  user_id  BigInt   @db.BigInt
  otp_value String  @db.VarChar(6)
  created_at DateTime @default(now()) @db.DateTime(0)
  updated_at DateTime @updatedAt @db.DateTime(0)
  deleted_at DateTime? @db.DateTime(0)

  @@map("otp_data")
}

model User {
  id            BigInt   @id @default(autoincrement()) @db.BigInt
  countryCode   String   @db.VarChar(5)
  phoneNumber   String   @db.VarChar(20)
  fullName      String   @db.VarChar(125)
  Gender        Int      @db.SmallInt
  isBusinessUser Int     @db.TinyInt
  isActive      Int      @db.TinyInt
  emailID       String   @db.VarChar(125)
  rideOTP       String   @db.VarChar(4)
  isVerified    Int      @db.TinyInt
  referalCode   String?  @db.VarChar(20)
  referedBy     BigInt?  @db.BigInt
  created_at    DateTime @default(now()) @db.DateTime(0)
  updated_at    DateTime @updatedAt @db.DateTime(0)
  deleted_at   DateTime? @db.DateTime(0)

  @@map("user")
}


